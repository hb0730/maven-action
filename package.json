{
  "name": "maven-action",
  "version": "1.0.0",
  "private": true,
  "description": "setup maven action",
  "repository": {
    "type": "git",
    "url": "https://github.com/hb0730/maven-action"
  },
  "homepage": "https://github.com/hb0730/maven-action",
  "author": "hb0730",
  "license": "MIT",
  "keywords": [
    "actions",
    "maven",
    "setup"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.{ts,yml,json,md}",
    "format-check": "prettier --check **/*.{ts,yml,json,md}",
    "lint": "eslint . -c ./.github/linters/.eslintrc.yml",
    "pack": "ncc build src/index.ts --license licenses.txt",
    "all": "npm run format && npm run pack "
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@actions/io": "^1.1.3",
    "@actions/tool-cache": "^2.0.1",
    "semver": "^7.5.4",
    "typed-rest-client": "^1.8.11"
  },
  "devDependencies": {
    "@types/node": "^20.9.2",
    "@types/semver": "^7.5.6",
    "@vercel/ncc": "^0.38.1",
    "husky": "^8.0.3",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "husky": {
    "skipCI": true,
    "hooks": {
      "pre-commit": "npm run all"
    }
  }
}
